
.production{
	width: 750rpx;
	height: 1398rpx;
	background: #FFFFFF;
	border-radius: 0rpx 0rpx 0rpx 0rpx;
}
.production-top{
	width: 690rpx;
	height: 80rpx;
	background: #F5F5F5;
	border-radius: 40rpx 40rpx 40rpx 40rpx;
	opacity: 1;
	margin-top: 10rpx;
	margin-left: 30rpx;
	display: flex;
	align-items: center;
}
.production-top-img{
	width: 37rpx;
	height: 36rpx;
	margin-left: 284rpx;
}
.production-top-input{
	margin-left: 8rpx;
}
.production-select{
	margin-top: 30rpx;
	margin-left: 40rpx;
	width: 184rpx;
	height: 58rpx;
	font-size: 32rpx;
	font-family: PingFang SC-Bold, PingFang SC;
	font-weight: bold;
	color: #333333;
	line-height: 58rpx;
}
.production-quantity{
	display: flex;
	margin-top: 42rpx;
	margin-left: 40rpx;
}
.production-quantity-one{
	position: relative;
	width: 161rpx;
	height: 72rpx;
	border-radius: 12rpx 12rpx 12rpx 12rpx;
	opacity: 1;
	border: 2rpx solid #999999;
	line-height: 72rpx;
	text-align: center;
	font-size: 28rpx;
	font-family: PingFang SC-Regular, PingFang SC;
	font-weight: 400;
	color: #666666;
	margin-right: 18rpx;
}
.production-quantity-img{
	position: absolute;
	right: -14%;
	top: -27%;
	width: 44rpx;
	height: 44rpx;
}
.production-search{
	margin-top: 60rpx;
	margin-left: 40rpx;
	width: 128rpx;
	height: 58rpx;
	font-size: 32rpx;
	font-family: PingFang SC-Bold, PingFang SC;
	font-weight: bold;
	color: #333333;
	line-height: 58rpx;
}
.production-search-select{
	width: 750rpx;
	display: flex;
	flex-wrap: wrap;
	margin-left: 40rpx;
}
.production-search-select-one{
	width: 161rpx;
	height: 72rpx;
	border-radius: 12rpx 12rpx 12rpx 12rpx;
	opacity: 1;
	border: 2rpx solid #999999;
	line-height: 72rpx;
	text-align: center;
	font-size: 28rpx;
	font-family: PingFang SC-Regular, PingFang SC;
	font-weight: 400;
	color: #666666;
	margin-right: 12rpx;
	margin-top: 20rpx;
}

